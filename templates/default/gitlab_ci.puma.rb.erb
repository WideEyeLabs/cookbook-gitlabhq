#!/usr/bin/env puma

# This file was generated by chef for <%= @fqdn %>
# do not change this file by hand!

application_path = "<%= @app_home %>"

directory application_path

environment "<%= @environment %>"

daemonize true

pidfile "<%= @app_home %>/tmp/pids/puma.pid"

state_path "<%= @app_home %>/tmp/pids/puma.state"

stdout_redirect "<%= @app_home %>/log/puma.stdout.log", "<%= @app_home %>/log/puma.stderr.log"

bind "unix://<%= @app_home %>/tmp/sockets/<%= @app_name %>.socket"

workers <%= @number_of_workers || 1 %>
